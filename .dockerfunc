  docker rm mysql >/dev/null 2>/dev/null

  local DATADIR=$HOME/.mysql
  if [ -d "$DATADIR" ]; then
    mkdir -p $DATADIR
  fi

  docker run -d \
    -e MYSQL_ROOT_PASSWORD=root \
    -p 127.0.0.1:3306:3306 \
    -v $DATADIR:/var/lib/mysql \
    --name=mysql \
    mysql
}

