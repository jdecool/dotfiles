docker-keepass2() {
  docker-del_stopped keepass2

  docker run -d \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -v $HOME/Documents:/home/doe/Documents \
    -e DISPLAY=unix$DISPLAY \
    -u doe \
    --name keepass2 \
    jdecool/keepass2 "$@"
}

